<div id="main-row" class="col-8 offset-2 justify-content-center p-3">
    <% if(locals.message) { %>
    <h5><%= locals.message %></h5>
    <% } %>
  
    <!-- form -->
    <form action="/addUser" method="POST">
      <!-- user -->
      <div class="form-group col-6 offset-3">
        <input
          type="text"
          class="form-control"
          id="username"
          name="username"
          placeholder="Username"
          autocomplete="new-password"
          required
        />
      </div>
      <div class="form-group col-6 offset-3">
        <input
          type="password"
          class="form-control"
          id="password"
          name="password"
          placeholder="Password"
          autocomplete="new-password"
          required
        />
      </div>
  
      <div class="form-group col-6 offset-3">
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="role" id="role-normal" value="normal" checked>
            <label class="form-check-label" for="role-normal">normal</label>
          </div>
          <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="role" id="role-admin" value="admin">
            <label class="form-check-label" for="role-admin">admin</label>
          </div>
      </div>
  
      <div class="form-group form-btn">
        <button type="submit" class="btn btn-primary">Add User</button>
      </div>
    </form>
  </div>
  